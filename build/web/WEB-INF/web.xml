<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ServletConsultar</servlet-name>
        <servlet-class>servlet.ServletConsultar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletProductoNuevo</servlet-name>
        <servlet-class>servlet.ServletProductoNuevo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAgregarProducto</servlet-name>
        <servlet-class>servlet.ServletAgregarProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletObtenerInformacion</servlet-name>
        <servlet-class>servlet.ServletObtenerInformacion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletModificarProducto</servlet-name>
        <servlet-class>servlet.ServletModificarProducto</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletConsultar</servlet-name>
        <url-pattern>/ServletConsultar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletProductoNuevo</servlet-name>
        <url-pattern>/ServletProductoNuevo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAgregarProducto</servlet-name>
        <url-pattern>/ServletAgregarProducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletObtenerInformacion</servlet-name>
        <url-pattern>/ServletObtenerInformacion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletModificarProducto</servlet-name>
        <url-pattern>/ServletModificarProducto</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
